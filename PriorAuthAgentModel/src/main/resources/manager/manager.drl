rule "PA Approval"
	when 
		$m : ManagerAgent( elig, prov, serv )
	then
		System.out.println("PA REQUEST APPROVED");
		$m.quickMessage($m.getFacility(), $m, "approved", "pa-approval");
		$m.setElig(false);
		$m.setProv(false);
		$m.setServ(false);
		update($m);
end
